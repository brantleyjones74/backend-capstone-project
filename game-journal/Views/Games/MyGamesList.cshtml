@model IEnumerable<game_journal.Models.Game>

<p>
    <h4>My Games</h4>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @if (item.first_release_date == 0)
                {
                    <td></td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.HoursPlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                    <a asp-action="MyGameDetails" asp-route-id="@item.GameId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
