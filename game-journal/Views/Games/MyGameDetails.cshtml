@model game_journal.Models.View_Models.GameViewModel

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.HoursPlayed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.HoursPlayed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.UserRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.UserRating)
        </dd>
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @foreach (var genre in Model.Genres)
            {
                @(genre.Name)

            }
        </dd>
        <dt class="col-sm-2">
            Platforms
        </dt>
        <dd class="col-sm-10">
            @foreach (var platform in Model.Platforms)
            {
                @(platform.Name)

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="Delete" asp-route-id="@Model.Game.GameId">Delete</a> 
</div>
