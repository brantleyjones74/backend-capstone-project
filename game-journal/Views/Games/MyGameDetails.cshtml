@model game_journal.Models.View_Models.GameViewModel

<div>
    <h4>@Model.Game.Name</h4>
    <hr />
    <dl class="row">
        @if (Model.Game.first_release_date != 0)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Game.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Game.ReleaseDate)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.HoursPlayed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.HoursPlayed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.UserRating)
        </dt>
        <dt class="col-sm-10">
            @for (int i = 0; i < Model.Game.UserRating; i++)
            {
                <img style="width:2em;" src="https://img.icons8.com/flat_round/64/000000/star--v1.png">
            }
        </dt>
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @foreach (var genre in Model.GameGenres)
            {
                @(genre.Genre.Name)
                @:&nbsp;
            }
        </dd>
        <dt class="col-sm-2">
            Platforms
        </dt>
        <dd class="col-sm-10">
            @foreach (var platform in Model.GamePlatforms)
            {
                @(platform.Platform.Name)
                @:&nbsp;
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
    <a asp-action="MyGamesList">Back to List</a> |
    <a asp-action="Delete" asp-route-id="@Model.Game.GameId">Delete</a>
</div>
